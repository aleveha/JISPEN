{
	"compilerOptions": {
		"allowJs": false,
		"baseUrl": ".",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"paths": {
			"@api/*": ["src/api/*"],
			"@config/*": ["src/config/*"],
			"@pages/*": ["src/pages/*"],
			"@shared/*": ["src/shared/*"],
			"@styles/*": ["styles/*"],
			"@ui/*": ["src/ui/*"],
			"@state/*": ["src/states/*"],
			"@zones/*": ["src/zones/*"]
		},
		"pretty": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext"
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
